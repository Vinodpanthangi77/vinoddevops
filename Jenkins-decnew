pipeline{
    agent any
    
    environment{
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'vinod', url: 'https://github.com/Vinodpanthangi77/vinoddevops.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
                sh "mv target/*.war target/myweb.war"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-1']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/myweb.war  ec2-user@192.172.13.44:/root/apache-tomcat-9.0.64/webapps/
                    
                    ssh ec2-user@192.172.13.44:/root/apache-tomcat-9.0.64/bin/shutdown.sh
                    
                    ssh ec2-user@192.172.13.44:/root/apache-tomcat-9.0.64/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
